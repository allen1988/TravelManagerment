<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ac_bg" >
    
    <LinearLayout android:id="@+id/loginac_ll_login"
        android:orientation="vertical"
        android:padding="20dip"
        android:layout_marginTop="100dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <EditText android:id="@+id/logingac_et_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="admin"
            android:hint="@string/loginac_account"/>
        
         <EditText android:id="@+id/logingac_et_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="admin"
            android:inputType="textPassword"
            android:layout_marginTop="10dip"
            android:hint="@string/loginac_password"/>
         
         <Button android:id="@+id/loginac_btn_login"
             android:layout_marginTop="20dip"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="@string/loginac_btn_login"/>
    </LinearLayout>

</RelativeLayout>

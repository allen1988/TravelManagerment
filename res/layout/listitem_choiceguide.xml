<?xml version="1.0" encoding="utf-8"?>
<com.manuelpeinado.multichoiceadapter.CheckableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dip"
    android:layout_height="match_parent">
    
	<TextView android:id="@+id/tvGuideName"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_centerVertical="true"
	    android:textSize="17sp"/>
	
	<CheckBox android:id="@android:id/checkbox"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:focusable="false"
	    android:layout_centerVertical="true"
	    android:layout_alignParentRight="true"/>
</com.manuelpeinado.multichoiceadapter.CheckableRelativeLayout>
